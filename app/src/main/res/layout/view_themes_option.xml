<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:text="Card Picker"
              android:textSize="25sp"
              android:layout_margin="5dp"
              android:layout_height="wrap_content"/>
    <RadioGroup android:layout_width="300dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/rg_themes_radio_group_A"
                android:weightSum="8"
                android:gravity="center"
                android:layout_height="wrap_content">
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_red_color"
                     android:background="@drawable/card_red"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_purple_color"
                     android:background="@drawable/card_purple"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_sky_blue_color"
                     android:background="@drawable/card_sky_blue"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_dark_green_color"
                     android:background="@drawable/card_dark_green"
                     android:layout_height="wrap_content"/>
    </RadioGroup>

    <RadioGroup android:layout_width="300dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="8"
                android:id="@+id/rg_themes_radio_group_B"
                android:gravity="center"
                android:layout_height="wrap_content">
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_green_color"
                     android:background="@drawable/card_green"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_yellow_color"
                     android:background="@drawable/card_yellow"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_orange_color"
                     android:background="@drawable/card_orange"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:id="@+id/rbtn_themes_pink_color"
                     android:background="@drawable/card_pink"
                     android:layout_height="wrap_content"/>
    </RadioGroup>


</LinearLayout>