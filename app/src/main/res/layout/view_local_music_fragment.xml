<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>
        <com.project.stephencao.remusic.view.MyLocalMusicItem
                android:layout_width="match_parent"
                android:id="@+id/mi_local_music_files"
                android:layout_height="wrap_content">
        </com.project.stephencao.remusic.view.MyLocalMusicItem>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>
        <com.project.stephencao.remusic.view.MyLocalMusicItem
                android:layout_width="match_parent"
                android:id="@+id/mi_local_music_recent"
                android:layout_height="wrap_content">
        </com.project.stephencao.remusic.view.MyLocalMusicItem>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>

        <com.project.stephencao.remusic.view.MyLocalMusicItem
                android:layout_width="match_parent"
                android:id="@+id/mi_local_music_download"
                android:layout_height="wrap_content">
        </com.project.stephencao.remusic.view.MyLocalMusicItem>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>

        <com.project.stephencao.remusic.view.MyLocalMusicItem
                android:layout_width="match_parent"
                android:id="@+id/mi_local_music_singers"
                android:layout_height="wrap_content">
        </com.project.stephencao.remusic.view.MyLocalMusicItem>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/ll_local_music_created_song_lists"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_margin="5dp"
                   android:background="@drawable/arrow_right"
                   android:id="@+id/iv_local_music_created_song_lists_icon"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:text="创建的歌单(0)"
                  android:textSize="20sp"
                  android:layout_marginLeft="5dp"
                  android:id="@+id/tv_local_music_created_song_lists_decription"
                  android:textColor="#bababa"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/rl_local_music_song_list_display"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_local_music_song_list_image"
                   android:layout_height="50dp"/>
        <LinearLayout android:layout_width="match_parent"
                    android:layout_toRightOf="@id/iv_local_music_song_list_image"
                      android:layout_marginLeft="5dp"
                      android:orientation="vertical"
                      android:weightSum="2"
                      android:layout_height="50dp">
            <TextView android:layout_width="match_parent"
                      android:text="已创建的歌单"
                      android:layout_weight="1"
                      android:id="@+id/tv_local_music_song_list_title"
                      android:textColor="#737272"
                      android:textSize="20sp"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:text="1首"
                      android:id="@+id/tv_local_music_song_list_count"
                      android:textSize="15sp"
                      android:textColor="#bababa"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"/>
        </LinearLayout>
        <ImageButton android:layout_width="wrap_content"
                     android:background="@drawable/delete_selector"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="10dp"
                     android:layout_alignParentRight="true"
                     android:id="@+id/ibtn_local_music_song_list_delete"
                     android:layout_height="wrap_content"/>
        <ImageView android:layout_width="match_parent"
                android:layout_below="@id/iv_local_music_song_list_image"
                   android:background="@drawable/local_music_line"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/ll_local_music_bookmark_song_lists"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_margin="5dp"
                   android:background="@drawable/arrow_right"
                   android:id="@+id/iv_local_music_bookmark_song_lists_icon"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:text="收藏的歌单(0)"
                  android:textSize="20sp"
                  android:layout_marginLeft="5dp"
                  android:id="@+id/tv_local_music_bookmark_song_lists_decription"
                  android:textColor="#bababa"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>