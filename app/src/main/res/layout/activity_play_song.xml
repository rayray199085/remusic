<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include layout="@layout/view_local_music_title_bar"/>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_margin="10dp"
                 android:background="@drawable/service_off_selector"
                 android:id="@+id/ibtn_play_song_activity_end"
                 android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="300dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_height="300dp">
        <ImageView android:layout_width="156dp"
                   android:layout_centerInParent="true"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_activity_play_song_disc_icon"
                   android:layout_height="156dp"/>
        <ImageView android:layout_width="280dp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/game_disc"
                   android:layout_height="280dp"/>
        <ImageView android:layout_width="280dp"
                   android:layout_centerInParent="true"
                   android:id="@+id/iv_activity_play_song_disc_light"
                   android:background="@drawable/game_disc_light"
                   android:layout_height="280dp"/>
        <ImageView android:layout_width="50dp"
                   android:layout_marginTop="30dp"
                   android:id="@+id/iv_activity_play_song_disc_pin"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:background="@drawable/game_pin"
                   android:layout_height="140dp"/>
    </RelativeLayout>

</RelativeLayout>