<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/view_local_music_title_bar"/>

    <LinearLayout android:layout_width="60dp"
                  android:gravity="center"
                  android:layout_margin="5dp"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <ImageButton android:layout_width="wrap_content"
                     android:id="@+id/ibtn_activity_created_song_list_play_all"
                     android:background="@drawable/play_all_selector"
                     android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:text="播放全部"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:textColor="#bababa"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView android:layout_width="match_parent"
              android:layout_margin="5dp"
              android:id="@+id/lv_activity_created_song_list_songs"
              android:layout_height="wrap_content">
    </ListView>

</LinearLayout>