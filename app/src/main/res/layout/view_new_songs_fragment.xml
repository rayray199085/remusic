<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="230dp">
            <android.support.v4.view.ViewPager
                    android:layout_width="190dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/vp_new_songs_view_pager"
                    android:layout_height="190dp">
            </android.support.v4.view.ViewPager>
            <include layout="@layout/view_page_position_dot"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
                             android:id="@+id/iv_new_songs_private_fm"
                             android:background="@drawable/private_fm_selector"
                             android:layout_height="wrap_content"/>
                <TextView android:layout_width="80dp"
                          android:text="私人FM"
                          android:textSize="15sp"
                          android:textColor="#bababa"
                          android:gravity="center_horizontal"
                          android:id="@+id/tv_new_songs_private_fm"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_centerInParent="true"
                          android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
                             android:background="@drawable/daily_recommend_selector"
                             android:id="@+id/iv_new_songs_daily_recommend"
                             android:layout_height="wrap_content"/>
                <TextView android:layout_width="80dp"
                          android:text="每日新歌推荐"
                          android:textSize="15sp"
                          android:textColor="#bababa"
                          android:gravity="center_horizontal"
                          android:id="@+id/tv_new_songs_daily_recommend"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_alignParentRight="true"
                          android:layout_height="wrap_content">
                <ImageButton android:layout_width="wrap_content"
                             android:id="@+id/iv_new_songs_ranking"
                             android:background="@drawable/cloud_rank_selector"
                             android:layout_height="wrap_content"/>
                <TextView android:layout_width="80dp"
                          android:text="云音乐新歌榜"
                          android:textSize="15sp"
                          android:textColor="#bababa"
                          android:gravity="center_horizontal"
                          android:id="@+id/tv_new_songs_private_ranking"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="1dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginTop="5dp"
                      android:layout_height="600dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="0dp">
                <TextView android:layout_width="wrap_content"
                          android:drawableLeft="@drawable/daily"
                          android:text="推荐歌单"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_alignParentRight="true"
                          android:text="更多>"
                          android:id="@+id/tv_new_songs_more"
                          android:textColor="#bababa"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="0dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_alignParentTop="true"
                          android:text="新专辑上架"
                          android:drawableLeft="@drawable/music"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="0dp">
                <TextView android:layout_width="wrap_content"
                          android:text="主播电台"
                          android:drawableLeft="@drawable/radio"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/local_music_line"
                   android:layout_height="1dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:gravity="center"
                      android:text="现在可以根据个人喜好，自由调整首页项目顺序啦～"
                      android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_width="wrap_content"
                            android:background="#ffb700"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_margin="2dp"
                          android:padding="5dp"
                          android:layout_centerInParent="true"
                          android:background="#000000"
                          android:id="@+id/tv_new_songs_adjust_positions"
                          android:textColor="#ffb700"
                          android:text="调整栏目顺序"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>