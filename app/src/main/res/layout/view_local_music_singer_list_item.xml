<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="50dp"
               android:visibility="visible"
               android:layout_marginLeft="5dp"
               android:scaleType="centerCrop"
               android:layout_centerVertical="true"
               android:id="@+id/iv_singer_list_album_icon"
               android:layout_height="50dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/ll_singer_list_layout"
                  android:weightSum="2"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@id/iv_singer_list_album_icon"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textColor="#737272"
                  android:text="莫文蔚"
                  android:textSize="25sp"
                  android:id="@+id/tv_singer_list_artist"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="#bababa"
                  android:text="7首"
                  android:textSize="20sp"
                  android:id="@+id/tv_singer_list_song_number"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content"
               android:background="@drawable/selection_mini"
               android:id="@+id/iv_singer_list_manage"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="10dp"
               android:layout_height="wrap_content"/>
    <ImageView android:layout_width="match_parent"
               android:layout_marginTop="5dp"
               android:layout_below="@id/ll_singer_list_layout"
               android:background="@drawable/local_music_line"
               android:layout_height="wrap_content"/>

</RelativeLayout>